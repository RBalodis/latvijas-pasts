@using Microsoft.AspNetCore.Mvc.TagHelpers
@model latvijas_pasts_mvc.Models.BaseData

@{
    ViewData["Title"] = "Add new CV";
}

<h1>Create new CV</h1>

<h4>Type 'NONE' if not applicable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Basic data</h4>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <h4>Location info</h4>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetNumber" class="control-label"></label>
                <input asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>
            <h4>Education data</h4>
            <div class="form-group">
                <label asp-for="InstitutionName" class="control-label"></label>
                <input asp-for="InstitutionName" class="form-control" />
                <span asp-validation-for="InstitutionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationArea" class="control-label"></label>
                <select asp-for="EducationArea" asp-items="Html.GetEnumSelectList<BaseData.AreaOfEducation>()" class="form-control"></select>
                <span asp-validation-for="EducationArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationLevel" class="control-label"></label>
                <select asp-for="EducationLevel" asp-items="Html.GetEnumSelectList<BaseData.LevelOfEducation>()" class="form-control"></select>
                <span asp-validation-for="EducationLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationStatus" class="control-label"></label>
                <select asp-for="EducationStatus" asp-items="Html.GetEnumSelectList<BaseData.StudyStatus>()" class="form-control"></select>
                <span asp-validation-for="EducationStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSpent" class="control-label"></label>
                <input asp-for="TimeSpent" class="form-control" />
                <span asp-validation-for="TimeSpent" class="text-danger"></span>
            </div>
            <h4>Previous job/s data</h4>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobDescription" class="control-label"></label>
                <input asp-for="JobDescription" class="form-control" />
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCategory" class="control-label"></label>
                <input asp-for="JobCategory" class="form-control" />
                <span asp-validation-for="JobCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobAchievements" class="control-label"></label>
                <input asp-for="JobAchievements" class="form-control" />
                <span asp-validation-for="JobAchievements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobSkills" class="control-label"></label>
                <input asp-for="JobSkills" class="form-control" />
                <span asp-validation-for="JobSkills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobAdditionalInformation" class="control-label"></label>
                <input asp-for="JobAdditionalInformation" class="form-control" />
                <span asp-validation-for="JobAdditionalInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
